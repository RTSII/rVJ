{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "rVJ",
    "version": "0.1.0",
    "identifier": "com.rtsii.rvj",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:8080",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "rVJ - Video Editor",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "bin/ffmpeg.exe"
        ]
    },
    "plugins": {}
}